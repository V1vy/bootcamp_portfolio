---
import BadgeTech from './BadgeTech.astro';
import Gmail from '../assets/Gmail.astro';

interface Props {
  name: string;
  role: string;
  description: string;
  profile: string;
  email: string;
  techs: { name: string; color: string }[]; 
}

const { name, role, description, profile, email, techs } = Astro.props;
---

<div class="bg-gray-800 rounded-lg p-6 mb-10 shadow-lg overflow-hidden">
  <img src={profile} alt={name} class="rounded-full w-24 h-24 object-cover mb-4" />
  
  <h3 class="text-xl font-semibold text-gray-100">{name}</h3>
  <p class="text-gray-400 mb-2">{role}</p>
  <small class="text-sm">{description}</small>
  <div class="mt-2 mb-4 flex gap-2 items-center">
    <Gmail />
    <small class="text-gray-400">{email}</small>
  </div>
  <div class="flex flex-wrap gap-4 mt-4">
    {techs.map(tech => (
      <BadgeTech color={tech.color} info={tech.name} />
    ))}
  </div>
</div>
