<header
  class="fixed top-0 left-0 right-0 flex flex-col items-center justify-center sm:flex-row bg-zinc-900 sm:bg-transparent py-5 w-full px-10 transition-colors duration-300"
>
  <nav class="flex flex-col items-center sm:flex-row gap-x-10">
    <a class="hover:text-blue-400 opacity-70 hover:opacity-100" href="#">
      Inicio
    </a>
    <a class="hover:text-blue-400 opacity-70 hover:opacity-100" href="#devs">
      Desarrolladores
    </a>
    <a
      class="hover:text-blue-400 opacity-70 hover:opacity-100"
      href="#projects"
    >
      Proyectos
    </a>
    <a
      class="hover:text-blue-400 opacity-70 hover:opacity-100"
      href="#contacts"
    >
      Contacto
    </a>
  </nav>
</header>

<script>
  window.addEventListener("scroll", () => {
    const header = document.querySelector("header");
    if (header) {
      if (window.scrollY > 50) {
        header.classList.add("header-bg-scroll");
      } else {
        header.classList.remove("header-bg-scroll");
      }
    }
  });
</script>
<style>
  .header-bg-scroll {
    background-color: #1f1f2e;
    backdrop-filter: blur(10px);
    transition: background-color 0.3s ease;
  }
</style>
