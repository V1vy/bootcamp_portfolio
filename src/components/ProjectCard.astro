---
// ProjectCard.astro
interface Props {
  title: string;
  description: string;
  image: string; 
  link: string; 
}

const { title, description, image, link } = Astro.props;
---

<div class="max-w-sm rounded-lg overflow-hidden bg-gray-800 text-white border-2 border-transparent hover:border-blue-500 transition-all duration-300">
  <!-- Imagen del proyecto -->
  <img class="w-full" src={image} alt={title} />
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{title}</div>
    <p class="text-gray-400 text-base">{description}</p>
  </div>
  <div class="px-6 py-1">
    <slot></slot>
  </div>
  <div class="px-6 pt-4 pb-2">
    <a href={link} class="text-blue-400 hover:text-blue-600" target="_blank" rel="noopener noreferrer">
      Ver Proyecto
    </a>
  </div>
</div>
